{
  "name": "othercodes/jexupdate",
  "type": "project",
  "description": "Joomla Extension Update Server with GitHub integration.",
  "license": "MIT",
  "keywords": [
    "joomla",
    "extension",
    "updates",
    "github"
  ],
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "require": {
    "ext-dom": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "~6.0",
    "illuminate/support": "^5.7.20",
    "monolog/monolog": "^1.17",
    "othercodes/ddd-value-object": "^1.0.0",
    "slim/http-cache": "^1.0",
    "slim/slim": "^3.1",
    "vlucas/phpdotenv": "^3.1.0"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "phpunit/phpunit": "^8.5",
    "mockery/mockery": "^1.2",
    "php-parallel-lint/php-parallel-lint": "^1.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "JEXServer\\": "app/",
      "JEXUpdate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JEXUpdate\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example' , '.env');\""
    ],
    "lint": "parallel-lint . --exclude vendor",
    "style": "phpcs -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 app src tests",
    "style-fix": "phpcbf -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 app src tests",
    "phpunit": "phpunit --configuration phpunit.xml",
    "test": [
      "@lint",
      "@style",
      "@phpunit"
    ]
  }
}
